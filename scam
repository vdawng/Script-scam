-- Táº¡o GUI chÃ­nh
local ScreenGui = Instance.new("ScreenGui", game.CoreGui)
ScreenGui.Name = "GrowAGardenHub"

-- Main Frame
local MainFrame = Instance.new("Frame", ScreenGui)
MainFrame.Size = UDim2.new(0, 500, 0, 320)
MainFrame.Position = UDim2.new(0.25, 0, 0.25, 0)
MainFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
MainFrame.BorderSizePixel = 0

-- Header
local Header = Instance.new("TextLabel", MainFrame)
Header.Size = UDim2.new(1, 0, 0, 40)
Header.BackgroundColor3 = Color3.fromRGB(170, 0, 0)
Header.Text = "ðŸŒ¹ Grow A Garden Hub ðŸŒ¹"
Header.TextColor3 = Color3.new(1, 1, 1)
Header.Font = Enum.Font.GothamBold
Header.TextScaled = true

-- Tab buttons container
local TabBar = Instance.new("Frame", MainFrame)
TabBar.Size = UDim2.new(0, 120, 1, -40)
TabBar.Position = UDim2.new(0, 0, 0, 40)
TabBar.BackgroundColor3 = Color3.fromRGB(40, 40, 40)

-- Content container
local ContentFrame = Instance.new("Frame", MainFrame)
ContentFrame.Size = UDim2.new(1, -120, 1, -40)
ContentFrame.Position = UDim2.new(0, 120, 0, 40)
ContentFrame.BackgroundColor3 = Color3.fromRGB(15, 15, 15)

-- HÃ m táº¡o Tab
local Tabs = {}
function CreateTab(name)
    local tabBtn = Instance.new("TextButton", TabBar)
    tabBtn.Size = UDim2.new(1, 0, 0, 40)
    tabBtn.Text = name
    tabBtn.BackgroundColor3 = Color3.fromRGB(60, 0, 0)
    tabBtn.TextColor3 = Color3.new(1, 1, 1)
    tabBtn.Font = Enum.Font.GothamBold
    tabBtn.TextScaled = true

    local tabFrame = Instance.new("ScrollingFrame", ContentFrame)
    tabFrame.Size = UDim2.new(1, 0, 1, 0)
    tabFrame.CanvasSize = UDim2.new(0, 0, 0, 0)
    tabFrame.Visible = false
    tabFrame.BackgroundTransparency = 1

    tabBtn.MouseButton1Click:Connect(function()
        for _, t in pairs(Tabs) do
            t.Frame.Visible = false
        end
        tabFrame.Visible = true
    end)

    Tabs[name] = {Frame = tabFrame}
    return Tabs[name]
end

-- HÃ m táº¡o Button trong Tab
function CreateButton(tab, text, callback)
    local btn = Instance.new("TextButton", tab.Frame)
    btn.Size = UDim2.new(0.9, 0, 0, 35)
    btn.Position = UDim2.new(0.05, 0, 0, (#tab.Frame:GetChildren()-1)*40)
    btn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    btn.Text = text
    btn.TextColor3 = Color3.new(1, 1, 1)
    btn.Font = Enum.Font.Gotham
    btn.TextScaled = true
    btn.MouseButton1Click:Connect(callback)
end

-- HÃ m táº¡o Toggle
function CreateToggle(tab, text, callback)
    local frame = Instance.new("Frame", tab.Frame)
    frame.Size = UDim2.new(0.9, 0, 0, 35)
    frame.Position = UDim2.new(0.05, 0, 0, (#tab.Frame:GetChildren()-1)*40)
    frame.BackgroundColor3 = Color3.fromRGB(60, 60, 60)

    local label = Instance.new("TextLabel", frame)
    label.Size = UDim2.new(0.7, 0, 1, 0)
    label.Text = text
    label.TextColor3 = Color3.new(1, 1, 1)
    label.Font = Enum.Font.Gotham
    label.TextScaled = true
    label.BackgroundTransparency = 1

    local toggleBtn = Instance.new("TextButton", frame)
    toggleBtn.Size = UDim2.new(0.3, 0, 1, 0)
    toggleBtn.Position = UDim2.new(0.7, 0, 0, 0)
    toggleBtn.BackgroundColor3 = Color3.fromRGB(100, 0, 0)
    toggleBtn.Text = "OFF"
    toggleBtn.TextColor3 = Color3.new(1, 1, 1)
    toggleBtn.Font = Enum.Font.GothamBold
    toggleBtn.TextScaled = true

    local state = false
    toggleBtn.MouseButton1Click:Connect(function()
        state = not state
        toggleBtn.Text = state and "ON" or "OFF"
        toggleBtn.BackgroundColor3 = state and Color3.fromRGB(0,150,0) or Color3.fromRGB(100,0,0)
        callback(state)
    end)
end

-- Example Tabs
local tradeTab = CreateTab("Trade")
CreateButton(tradeTab, "Freeze Trade", function() print("Freeze Trade!") end)
CreateToggle(tradeTab, "Auto Accept", function(v) print("AutoAccept:", v) end)

local miscTab = CreateTab("Misc")
CreateButton(miscTab, "Dupe Pet", function() print("Dupe Pet!") end)

-- Máº·c Ä‘á»‹nh má»Ÿ tab Ä‘áº§u
Tabs["Trade"].Frame.Visible = true
